                        android:layout_width="51dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/company"></ImageView>

                    <TextView
