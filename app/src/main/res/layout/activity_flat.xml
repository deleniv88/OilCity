                        android:layout_centerInParent="true"
                        android:id="@+id/building_name3"
                        android:text="ТзОВ “ДВ-ЕКОСВІТ”"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_round_without_color"
                    android:backgroundTint="@color/ColorGrey"
                    android:padding="5dp"
                    android:id="@+id/beskyd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:id="@+id/company"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/company">
                    </ImageView>

                    <TextView
                        android:layout_toRightOf="@id/company"
                        android:layout_centerInParent="true"
                        android:id="@+id/building_name4"
                        android:text="МПП “Бескид”"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_round_without_color"
                    android:backgroundTint="@color/ColorGrey"
