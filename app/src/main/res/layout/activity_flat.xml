                    android:background="@drawable/bg_round_without_color"
                    android:backgroundTint="@color/ColorGrey"
                    android:padding="5dp"
                    android:id="@+id/ecosvit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
