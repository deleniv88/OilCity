<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    android:background="@color/myBackground">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/boryslavTop"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bor_632"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/gerbvsoil">
        </ImageView>

        <TextView
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/txtBoryslav"
            android:textStyle="normal"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Борислав -\nвсе почалося з\nнафти">
        </TextView>

    </RelativeLayout>

        <LinearLayout
            android:layout_above="@+id/borderBottom"
            android:layout_below="@+id/boryslavTop"
            android:id="@+id/backgroundBuilding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:alpha="0.3"
            android:background="@drawable/backg_rec"
            android:backgroundTint="@android:color/white"
            android:orientation="vertical"></LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_centerInParent="true"
            android:layout_above="@+id/borderBottom"
            android:layout_below="@+id/boryslavTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_home">
        </androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/borderBottom"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:orientation="horizontal">

<!--                    <View-->
<!--                        android:layout_centerInParent="true"-->
<!--                        android:layout_alignParentBottom="true"-->
<!--                        android:orientation="horizontal"-->
<!--                        android:layout_gravity="center_horizontal"-->
<!--                        android:layout_marginRight="20dp"-->
<!--                        android:layout_marginLeft="20dp"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="3dp"-->
<!--                        android:background="@android:color/white">-->
<!--                    </View>-->

        </RelativeLayout>
    <HorizontalScrollView
        android:id="@+id/horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linear"
            android:orientation="horizontal">
            <RelativeLayout
                android:gravity="center"
                android:background="@drawable/background_icons"
                android:layout_marginRight="10dp"
                android:layout_width="75dp"
                android:layout_height="75dp">

                <ImageView
                    android:id="@+id/PhotoAdmin"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/city_hall"></ImageView>

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/PhotoAdmin"
                    android:id="@+id/txtAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Держ.заклади та ін."
                    android:gravity="center"
                    android:textSize="8sp"
                    android:textColor="@android:color/black">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:background="@drawable/backg_icons2"
                android:layout_marginRight="10dp"
                android:layout_width="75dp"
                android:layout_height="75dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/PhotoEvents"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/folded_newspaper">
                </ImageView>

                <TextView
                    android:layout_below="@+id/PhotoEvents"
                    android:layout_centerInParent="true"
                    android:id="@+id/txtEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Новини"
                    android:textSize="9sp"
                    android:textColor="@android:color/black">
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/backg_icons3"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_width="75dp"
                android:layout_height="75dp">

                <ImageView
                    android:id="@+id/PhotoNews"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/calendar">
                </ImageView>

                <TextView
                    android:layout_below="@+id/PhotoNews"
                    android:layout_centerInParent="true"
                    android:id="@+id/txtNews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Події"
                    android:textSize="9sp"
                    android:textColor="@android:color/black">
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:background="@drawable/backg_icons4"
                android:layout_marginRight="10dp"
                android:layout_width="75dp"
                android:layout_height="75dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/PhotoRelax"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/smile">
                </ImageView>

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/PhotoRelax"
                    android:id="@+id/txtRelax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Дозвілля"
                    android:textSize="9sp"
                    android:textColor="@android:color/black">
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/backg_icons6"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_width="75dp"
                android:layout_height="75dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/PhotoBus"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/bus">
                </ImageView>

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/PhotoBus"
                    android:id="@+id/txtBus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Транспорт"
                    android:textSize="9sp"
                    android:textColor="@android:color/black">
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/backg_icons5"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_width="75dp"
                android:layout_height="75dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/PhotoFlat"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/flat">
                </ImageView>

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/PhotoFlat"
                    android:id="@+id/txtFlat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Комуналка"
                    android:textSize="9sp"
                    android:textColor="@android:color/black">
                </TextView>
            </RelativeLayout>

        </LinearLayout>

    </HorizontalScrollView>

    </RelativeLayout>

