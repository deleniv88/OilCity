<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/ColorGrey"
    android:id="@+id/event_layout"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:padding="5dp"
        android:layout_gravity="center"
        android:id="@+id/event_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/event_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="4dp"
            android:elevation="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/sport_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"></de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/sport_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="Name of Sport"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="normal"></TextView>

        </LinearLayout>

        <TextView
            android:layout_centerInParent="true"
            android:layout_below="@+id/event_rel"
            android:id="@+id/sport_text_bottom"
            android:textAlignment="center"
            android:text="Sport text"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

<!--        <ImageView-->
<!--            android:layout_below="@+id/event_rel"-->
<!--            android:layout_alignParentStart="true"-->
<!--            android:id="@+id/image_share_sport"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/ic_share_black_24dp"-->
<!--            android:tint="@android:color/white"-->
<!--            android:layout_marginLeft="8dp"-->
<!--            android:backgroundTint="@color/ColorTra0"/>-->

    </RelativeLayout>

</androidx.cardview.widget.CardView>





